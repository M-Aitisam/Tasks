   @page "/greeting"

   <PageTitle>Greeting Page</PageTitle>

   <h3>Greeting Component</h3>

   <p>Enter your name:</p>
   <input @bind="userName" placeholder="Enter your name" /> <!-- Two-way binding -->
   <br />

   <h3>Greeting message: Hello: <span style="background-color: blanchedalmond; font-weight: bold;">@userName!</span></h3> <!-- One-way binding -->
   @code {
       private string? userName;
   }
